{
  "env": {
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:functional/no-mutations",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {},
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["functional", "@typescript-eslint", "@typescript-eslint/eslint-plugin"],
  "rules": {
    "@typescript-eslint/no-empty-function": "off",
    "prefer-template": "error",
    "functional/no-let": "off"
  }
}
