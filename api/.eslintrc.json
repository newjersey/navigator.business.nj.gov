{
  "env": {
    "es2021": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:unicorn/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {},
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "@typescript-eslint/eslint-plugin"],
  "rules": {
    "@typescript-eslint/no-empty-function": "off",
    "@typescript-eslint/explicit-function-return-type": "warn",
    "eqeqeq": "warn",
    "prefer-template": "error",
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "camelCase": true,
          "pascalCase": true
        }
      }
    ],
    "unicorn/prevent-abbreviations": "off",
    "unicorn/numeric-separators-style": "off",
    "unicorn/prefer-module": "off",
    "unicorn/no-array-reduce": "off",
    "unicorn/switch-case-braces": "off",
    "unicorn/new-for-builtins": "off",
    "unicorn/prefer-at": "off",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [".*"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["lib/**/*.js"],
      "env": { "node": true },
      "rules": {
        "no-undef": "off",
        "@typescript-eslint/no-var-requires": "off"
      }
    },
    {
      "files": ["**/*.js"],
      "parser": "espree",
      "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/explicit-function-return-type": "off",
        "no-undef": "off",
        "eqeqeq": "off",
        "unicorn/no-null": "off",
        "unicorn/no-useless-undefined": "off",
        "unicorn/prefer-node-protocol": "off",
        "jest-formatting/padding-around-describe-blocks": "off",
        "jest-formatting/padding-around-before-each-blocks": "off",
        "jest-formatting/padding-around-test-blocks": "off"
      }
    },
    {
      "files": ["cdk/bin/**/*", "cdk/lib/**/*", "cdk/test/**/*", "api/lib/api/scripts/**/*"],
      "rules": {
        "no-restricted-imports": "off",
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/explicit-function-return-type": "off",
        "no-undef": "off"
      }
    },
    {
      "files": ["**/*.test.*"],
      "plugins": ["jest", "jest-formatting"],
      "extends": ["plugin:jest/recommended", "plugin:jest-formatting/recommended"],
      "rules": {
        "jest/expect-expect": "error",
        "jest/no-disabled-tests": "off"
      }
    },
    {
      "files": ["src/client/*", "src/db/*", "src/client/dynamics/**", "src/client/dep/**"],
      "extends": ["plugin:unicorn/recommended"],
      "rules": {
        "unicorn/filename-case": [
          "error",
          {
            "cases": {
              "camelCase": true,
              "pascalCase": true
            }
          }
        ],
        "unicorn/prevent-abbreviations": "off",
        "unicorn/numeric-separators-style": "off",
        "unicorn/prefer-module": "off",
        "unicorn/no-array-reduce": "off",
        "unicorn/switch-case-braces": "off",
        "unicorn/prefer-at": "off"
      }
    },
    {
      "files": ["src/db/migrations/*"],
      "extends": ["plugin:unicorn/recommended"],
      "rules": {
        "unicorn/filename-case": [
          "error",
          {
            "cases": {
              "snakeCase": true
            }
          }
        ],
        "unicorn/prevent-abbreviations": "off",
        "unicorn/numeric-separators-style": "off",
        "unicorn/prefer-module": "off",
        "unicorn/no-array-reduce": "off",
        "unicorn/switch-case-braces": "off",
        "unicorn/prefer-at": "off"
      }
    }
  ]
}
