{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "lib",
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "test/factories.ts",
    "src/**/*.test.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  }
}
