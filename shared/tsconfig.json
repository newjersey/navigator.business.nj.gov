{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "lib",
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", ".vscode/**/*", "src/**/*.test.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
