{
  "name": "@businessnjgovnavigator/shared",
  "version": "1.0.0",
  "description": "A shared library for the business.nj.gov navigator",
  "private": true,
  "main": "lib/shared/src/index.js",
  "files": [
    "lib"
  ],
  "typings": "./lib/shared/src/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "clean": "rimraf lib",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --max-warnings 0 --fix",
    "prettier": "prettier --write . --ignore-path=./.eslintignore",
    "prettier:check": "prettier . --check --ignore-path=./.eslintignore",
    "test": "jest",
    "test:ci": "jest --reporters=jest-junit --outputFile=../coverage/test_results/shared-jest.xml --runInBand --logHeapUsage --collectCoverage=true --coverageDirectory=../coverage/shared/",
    "typecheck": "tsc --noemit"
  },
  "prettier": {
    "printWidth": 110,
    "endOfLine": "auto"
  },
  "devDependencies": {
    "@babel/runtime": "7.16.3",
    "@jest/types": "27.4.2",
    "@types/jest": "27.0.3",
    "@types/node": "14.18.0",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "cross-env": "7.0.3",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "jest": "27.4.3",
    "jest-junit": "13.0.0",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.1",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.5.2"
  },
  "jest-junit": {
    "outputDirectory": "../coverage/test_results",
    "uniqueOutputName": "true"
  }
}
