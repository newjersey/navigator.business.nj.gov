{
  "name": "@businessnjgovnavigator/content",
  "version": "1.0.0",
  "description": "A content library for the business.nj.gov navigator",
  "private": true,
  "main": "src",
  "scripts": {
    "build": "node ./build.js",
    "clean": "rimraf lib",
    "dev": "yarn build",
    "prettier": "prettier --write . --ignore-path=./.eslintignore --trailing-comma es5",
    "prettier:check": "prettier . --check --ignore-path=./.eslintignore --trailing-comma es5",
    "spellcheck": "cspell '**/*.md' '**/*.json' --config ../cspell.json"
  },
  "prettier": {
    "printWidth": 110,
    "endOfLine": "auto"
  },
  "devDependencies": {
    "@types/node": "16.18.40",
    "cross-env": "7.0.3",
    "cspell": "6.31.3",
    "prettier": "3.0.2",
    "rimraf": "5.0.1"
  }
}
