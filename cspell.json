{
  "version": "0.2",
  "language": "en",
  "import": ["./content/src/spellcheck-exceptions.json"],
  "ignorePaths": [
    "node_modules/**",
    "out/**",
    "web/out/**",
    "package.json",
    "content/lib/industry.json",
    "content/test/**"
  ],
  "overrides": [
    {
      "filename": "**/*.md",
      "patterns": [
        {
          "name": "urlWrapped",
          "pattern": "https?:\\/\\/(?:[^\\s\\)\\\\]|\\\\\\s*\\r?\\n\\s*)+"
        },
        {
          "name": "ignoreNotesMdFrontmatter",
          "pattern": "^notesMd:\\s.*$"
        }
      ],
      "ignoreRegExpList": ["urlWrapped", "ignoreNotesMdFrontmatter"]
    }
  ]
}
