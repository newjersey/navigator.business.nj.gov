{
  "extends": ["config:base"],
  "stabilityDays": 3,
  "prConcurrentLimit": 15,
  "prCreation": "not-pending",
  "labels": ["renovate"],
  "ignorePaths": [".yarn"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "lockFileMaintenance": { "enabled": true },
  "ignoreDeps": ["node"],
  "packageRules": [
    {
      "matchPackagePrefixes": ["cypress"],
      "groupName": "cypress"
    },
    {
      "matchPackageNames": ["@types/jest", "ts-jest", "babel-jest"],
      "matchPackagePrefixes": ["jest"],
      "groupName": "jest"
    },
    {
      "matchPackageNames": ["@types/eslint", "babel-eslint"],
      "matchPackagePrefixes": ["@typescript-eslint/", "eslint"],
      "groupName": "linting"
    },
    {
      "matchPackageNames": ["@types/node"],
      "major": { "enabled": false }
    },
    {
      "matchPackageNames": ["@types/react", "@types/react-tabs", "focus-trap-react"],
      "matchPackagePrefixes": ["react"],
      "groupName": "react"
    },
    {
      "matchPackagePrefixes": ["@testing-library"],
      "groupName": "testing-library"
    },
    {
      "matchPackageNames": ["@types/jasmine", "jasmine"],
      "groupName": "jasmine"
    },
    {
      "matchPackageNames": [
        "@types/copy-webpack-plugin",
        "@types/webpack-node-externals",
        "copy-webpack-plugin",
        "tsconfig-paths-webpack-plugin",
        "@serverless/typescript"
      ],
      "matchPackagePrefixes": ["serverless", "webpack"],
      "groupName": "serverless-and-webpack"
    }
  ]
}
