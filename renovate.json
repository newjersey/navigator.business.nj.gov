{
  "extends": ["config:recommended"],
  "stabilityDays": 3,
  "prConcurrentLimit": 15,
  "prCreation": "not-pending",
  "labels": ["renovate"],
  "ignorePaths": [".yarn"],
  "postUpdateOptions": ["yarnDedupeHighest"],
  "lockFileMaintenance": { "enabled": true },
  "ignoreDeps": ["node", "cimg/node", "kill-port", "semantic-release"],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "labels": ["ci", "breaking-change"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeStrategy": "rebase"
    },
    {
      "matchPackageNames": ["@aws-amplify/core", "@aws-amplify/auth", "decap-cms-app"],
      "automerge": false
    },
    {
      "matchPackageNames": ["cypress*"],
      "groupName": "cypress"
    },
    {
      "matchPackageNames": ["@types/jest", "ts-jest", "babel-jest", "@jest/types", "jest*"],
      "groupName": "jest"
    },
    {
      "matchPackageNames": ["@types/eslint", "babel-eslint", "@typescript-eslint/*", "eslint*"],
      "groupName": "linting"
    },
    {
      "matchPackageNames": ["@types/node"]
    },
    {
      "matchPackageNames": ["@types/node"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@types/react", "focus-trap-react", "@types/react-dom", "react*"],
      "groupName": "react"
    },
    {
      "matchPackageNames": ["@testing-library/*"],
      "groupName": "testing-library"
    },
    {
      "matchPackageNames": ["@storybook/*"],
      "groupName": "storybook"
    },
    {
      "matchPackageNames": ["@aws-amplify/*"],
      "groupName": "aws-amplify"
    },
    {
      "matchPackageNames": ["@swc/*"],
      "groupName": "swc"
    },
    {
      "matchPackageNames": ["@mui/*"],
      "groupName": "material-ui"
    },
    {
      "matchPackageNames": ["@aws-sdk/*"],
      "groupName": "aws-sdk"
    },
    {
      "matchPackageNames": ["unified", "remark", "remark-*", "rehype", "rehype-*"],
      "groupName": "unified"
    },
    {
      "matchManagers": ["pip_requirements"],
      "automerge": true,
      "ignoreTests": true
    }
  ]
}
